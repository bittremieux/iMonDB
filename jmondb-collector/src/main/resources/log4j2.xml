<?xml version="1.0" encoding="utf-8"?>
<!-- jMonDB-collector logging: detailed logging to file <jmondb-collector.log> and console -->
<configuration>

	<appenders>
        <RollingFile name="logFile" fileName="jmondb-collector.log" filePattern="jmondb-collector.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</appenders>
	
	<loggers>
		<root level="TRACE">
			<appender-ref ref="logFile" />
			<appender-ref ref="console" level="INFO" />
		</root>
	</loggers>
	
</configuration>
